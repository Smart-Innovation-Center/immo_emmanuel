<form action="{{ url('structure_location_delete', {id: location.id}) }}" method="post" data-confirmation="true" id="delete-form-{{ location.id }}">
	<a href="{{ url('structure_location_edit', {id: location.id}) }}" class="btn btn-sm btn-outline-primary">{{ 'Modifier' | trans }}</a>
	&nbsp;&nbsp;&nbsp;
	<input type="hidden" name="token" value="{{ csrf_token('delete') }}"/>
	<button type="submit" class="btn btn-sm btn-danger" onclick="if(confirm('{{ 'confirmation.delete_item' | trans }}')){ return true }else{ return false }">
		{{ 'Supprimer' | trans }}
	</button>
</form>
