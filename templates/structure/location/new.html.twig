{% extends "structure/bars.html.twig" %}

{% block title %}
	{{ 'Enregistrer une location' | trans }}
{% endblock %}

{% block contenpage %}
	<div class="card mb-3">
		{{ form_start(form) }}

		<div class="form-group">
			<input class="form-control" type="hidden" id="recorder" name="recorder" value="{{ app.user.id }}" readonly="readonly"/>
		</div>

		<div class="form-group">
			<label for="select-search-1" class="form-label rd-input-label focus not-empty">user</label>
			<select id="select-search-1" name="user" id="user" data-minimum-results-for-search="Infinity" class="form-control select-filter select2-hidden-accessible" tabindex="-1" aria-hidden="true">
				{% for user in users %}
					<option value="{{user.id}}" required="required">{{user.username}}</option>
				{% endfor %}
			</select>
		</div>

		<div class="form-group">
			{{ form_row(form.bien) }}
		</div>

		<div class="form-group">
			{{ form_row(form.libelle) }}
		</div>

		<div class="form-group">
			{{ form_row(form.loyer) }}
		</div>

		<div class="form-group">
			{{ form_row(form.caution) }}
		</div>

		<div class="form-group">
			{{ form_row(form.avance) }}
		</div>

		<div class="form-group">
			{{ form_row(form.dateDebut) }}
		</div>

		<div class="form-group">
			{{ form_row(form.dateFin) }}
		</div>

		<div class="form-group">
			<button type="submit" class="btn btn-primary">
				{{ 'Cr√©er une location'|trans }}
			</button>
		</div>
		{{ form_end(form) }}
	</div>
{% endblock %}
