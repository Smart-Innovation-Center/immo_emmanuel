{% extends "structure/bars.html.twig" %}


{% block title %}
	{{ 'Bien des propriétaires'|trans }}
{% endblock %}


{% block contenpage %}

	<div class="card mb-3">

		<div class="card-body">
			<h1>Voici le(s) bien(s) du propriétaire
				{{ user.username }}</h1>

			<div class="table-responsive">
				<table class="table" style="background-color: #FFFFFF;">
					<thead class="thead">
						<tr>
							<th class="hidden-sm">Libellé</th>
							<th class="hidden-sm">Adresse</th>
							<th class="hidden-sm">Mise en disposition</th>
							<th class="hidden-sm">Prix en fonction de la mise en disposition</th>
						</tr>
					</thead>
					<tbody>

						{% for bien in biens %}
							<tr>
								<td class="hidden-sm">{{ bien.propertyDescription.title }}</td>
								<td class="hidden-sm">{{ bien.address }}</td>
								<td class="hidden-sm">{{ bien.dealType.name }}</td>
								<td class="hidden-sm">{{ bien.price }}
									FCFA</td>
							</tr>

						{% else %}
							<div class="well">Nothing</div>
						{% endfor %}

					</tbody>
				</table>
			</div>
		</div>
	</div>

{% endblock %}
