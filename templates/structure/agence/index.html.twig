{% extends "structure/bars.html.twig" %}


{% block title %}
	{{ 'agence'|trans }}
{% endblock %}

{% block contenpage %}

<div class="card mb-3">

	<div class="card-body">
		<div class="table-responsive">
			<table class="table" style="background-color: #FFFFFF">
				<thead class="thead">
					<tr>
						<th>{{ 'Nom de l\'agence' | trans }}</th>
							<th>{{ 'email' | trans }}</th>
							<th>{{ 'contact' | trans }}</th>
							<th>{{ 'adresse' | trans }}</th>
							<th>{{ 'action' | trans }}</th>
						</tr>
				 	</thead>
					<tbody>

						

                        {% for agence in agences %}
							{% if agence.StructureId.libelle == app.user.AgenceId.structureId.libelle  %}
							<tr>
								<td>{{ agence.libelle }}</td>
								<td>{{ agence.email }}</td>
								<td>{{ agence.contact }}</td>
								<td>{{ agence.adresse }}</td>
								<td>
									{{ include('structure/agence/_action_form.html.twig', {agence: agence}, with_context = false) }}
								</td>
							</tr>
							{% endif %}
						{% else %}
							<tr>
								<td>{{ 'no_items_found' | trans }}</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>

{% endblock %} 
