{% extends "structure/bars.html.twig" %}

{% block title %}
	{{ 'Ajouter une agence' | trans }}
{% endblock %}

{% block contenpage %}

	<div class="card mb-3">
		<div class="card-body">
			{{ form_start(form) }}

			<div class="form-group">
				<input class="form-control" type="hidden" id="structure_id" name="structure_id" value="{{ app.user.AgenceId.structureId.id }}" readonly="readonly"/>
			</div>

			<div class="form-group" id="libelle">
				{{ form_row(form.libelle) }}
			</div>

			<div class="form-group" id="email">
				{{ form_row(form.email) }}
			</div>

			<div class="form-group" id="contact">
				{{ form_row(form.contact) }}
			</div>

			<div class="form-group" id="email">
				{{ form_row(form.adresse) }}
			</div>

			<div class="form-group">

				<button type="submit" class="btn btn-primary">
					{{ 'Créer une agence'|trans }}
				</button>

				{{ form_widget(form.saveAndCreateNew, {label: 'Enregistrer et créer une nouvelle agence', attr: {class: 'btn btn-primary'}}) }}

			</div>

			{{ form_end(form) }}

		</div>
	</div><br>
{% endblock %}
