{% extends 'admin/layout/base.html.twig' %}

{% block title %}
	{{ 'Agences'|trans }}
{% endblock %}

{% block body %}

<ul class="nav nav-tabs">
	<li class="nav-item active">
		<span class="nav-link active">
			<i class="fas fa-gavel text-danger"></i>
			{{ 'Agences'|trans }}
		</span>
	</li>
</ul>

<div class="card mb-3">
	<div class="card-body">
		<div class="table-responsive">
			<table class="table" style="background-color: #FFFFFF">
				<thead class="thead">
					<tr>
						<th>{{ 'Nom de l\'agence' | trans }}</th>
						<th>{{ 'adresse' | trans }}</th>
						<th>{{ 'contact' | trans }}</th>
						<th>{{ 'email' | trans }}</th>
						<th>{{ 'Dossier' | trans }}</th>
						<th>{{ 'action' | trans }}</th>
					</tr>
				</thead>
				<tbody>
					{% for agence in agences %}
						<tr>
							<td>{{ agence.libelle }}</td>
							<td>{{ agence.adresse }}</td>
							<td>{{ agence.contact }}</td>
							<td>{{ agence.email }}</td>
							<td>
								<a href="{{('download/'~agence.documents~'.zip')}}" download>
									<i class="fa fa-file-pdf"></i>
								</a>
							</td>
							{% if agence.etat == 0 %}
								<td>
									{{ include('admin/gest_agence/_action_form.html.twig', {agence: agence}, with_context = false) }}
								</td>
							{% elseif agence.etat != 0 %}
								<td>
									{{ include('admin/gest_agence/_action_form.html1.twig', {agence: agence}, with_context = false) }}
								</td>
							{% endif %}
						</tr>
					{% else %}
						<tr>
							<td>{{ 'no_items_found' | trans }}</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
</div>
{% endblock %}
