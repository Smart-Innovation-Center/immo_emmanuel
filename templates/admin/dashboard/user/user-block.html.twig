{% extends 'admin/layout/base.html.twig' %}

{% block title %}
	{{ 'dashboard'|trans }}
{% endblock %}

{% block body %}
	<div class="card mb-3">
		<div class="card-body">
			<div class="table-responsive">
				<table class="table" style="background-color: #FFFFFF">
					<thead class="thead">
						<th>Nom d'utilisateur</th>
						<th>Email</th>
						<th>Action</th>
						{#<tr>Role</tr>#}
					</thead>
					<tbody>
						{% for User_Block in User_Blocks %}
							<tr>
								<td>{{User_Block.username}}</td>
								<td>{{User_Block.email}}</td>
								<td>
									<a href="{{ url('admin_act_user', {id: User_Block.id}) }}" class="btn btn-sm btn-outline-default" style="background-color:green; color:white">Activer</a>
								</td>
								{#<tr>{{tenant.roles | trans}}</tr>#}
							</tr>
						{% else %}
							<tr>
								<td>{{ 'no_items_found' | trans }}</td>
							</tr>
						{% endfor %}
					</tbody>
				</tbody>
			</table>
		</div>
	</div>

</div>{% endblock %}
