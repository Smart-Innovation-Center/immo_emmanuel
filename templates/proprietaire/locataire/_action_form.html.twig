<form action="{{ url('proprietaire_locataire_delete', {id: user.id}) }}" method="post" data-confirmation="true" id="delete-form-{{ user.id }}">
	<a href="{{ url('proprietaire_locataire_edit', {id: user.id}) }}" class="btn btn-sm btn-outline-primary">Modifier</a>
	&nbsp;&nbsp;&nbsp;
	<input type="hidden" name="token" value="{{ csrf_token('delete') }}"/>
	<button type="submit" class="btn btn-sm btn-danger" onclick="if(confirm('{{ 'confirmation.delete_user' | trans }}')){ return true }else{ return false }">
		Supprimer
	</button>
</form>
